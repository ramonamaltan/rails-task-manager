<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <%= '[X]' %>
      <% else %>
        <%= '[   ]' %>
      <% end %>
      <%= link_to task.title, task_path(task) %> 
      <%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: 'Are you sure you want to delte this task?'}%>
    </li>
  <% end %>
</ul>
<%= link_to '+ Add a new task', new_task_path %>
